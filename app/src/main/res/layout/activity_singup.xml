<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/margin1"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:text="@string/signup"
            android:textColor="@color/black"
            android:fontFamily="@font/font2"
            android:textSize="@dimen/txt_size_xlg"
            android:layout_marginTop="@dimen/margin1"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:text="@string/login_msg"
            android:layout_below="@id/txt1"
            android:fontFamily="@font/font1"
            android:layout_marginTop="@dimen/margin_lg"
            android:textColor="@color/dgry"
            android:lineSpacingExtra="@dimen/sizesm1"
            android:textSize="@dimen/txt_size_lg"
            android:layout_marginRight="@dimen/margin_xlg"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/margin_xxlg"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin"
            android:background="@drawable/round_ract0"
            android:layout_height="@dimen/size62">

            <EditText
                android:id="@+id/et1"
                android:singleLine="true"
                android:background="@null"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_lg"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/sizesm1"
                android:inputType="text"
                android:layout_centerVertical="true"
                android:hint="@string/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/margin1"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin"
            android:background="@drawable/round_ract0"
            android:layout_height="@dimen/size62">

            <EditText
                android:id="@+id/et2"
                android:singleLine="true"
                android:background="@null"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_lg"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/sizesm1"
                android:inputType="text"
                android:layout_centerVertical="true"
                android:hint="@string/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/margin1"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin"
            android:background="@drawable/round_ract0"
            android:layout_height="@dimen/size62">

            <EditText
                android:id="@+id/et3"
                android:singleLine="true"
                android:background="@null"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_lg"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/sizesm1"
                android:inputType="textEmailAddress"
                android:layout_centerVertical="true"
                android:hint="@string/email_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cc_rl"
            android:layout_width="match_parent"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/margin1"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin"
            android:background="@drawable/round_ract0"
            android:layout_height="@dimen/size62">
            <TextView
                android:id="@+id/cc_digit"
                android:layout_centerVertical="true"
                android:text="+91"
                android:textSize="@dimen/txt_size_lg"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/down_icon"
                android:layout_width="@dimen/size1"
                android:src="@drawable/down_icon"
                android:tint="@color/dgry"
                android:padding="@dimen/sizesm"
                android:layout_marginLeft="@dimen/sizesm1"
                android:layout_marginRight="@dimen/margin"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/cc_digit"
                android:layout_height="@dimen/size1"/>
            <EditText
                android:id="@+id/et4"
                android:layout_toRightOf="@id/down_icon"
                android:singleLine="true"
                android:background="@null"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_lg"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/sizesm1"
                android:inputType="phone"
                android:layout_centerVertical="true"
                android:hint="@string/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/margin1"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin"
            android:background="@drawable/round_ract0"
            android:layout_height="@dimen/size62">

            <EditText
                android:id="@+id/et5"
                android:singleLine="true"
                android:background="@null"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_lg"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/sizesm1"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:hint="@string/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_lg"
            android:background="@drawable/bt_bg"
            android:fontFamily="@font/font2"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:onClick="LoginNow"
            android:textSize="@dimen/txt_size_lg"
            android:text="@string/signup"
            android:backgroundTint="@color/app_color"
            android:layout_height="@dimen/size62"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>