<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="@dimen/size100"

    android:onClick="ProNow">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rect45"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/sdsa"
        android:layout_width="match_parent"

        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/size06"
            android:layout_height="@dimen/size06"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/lgry"
            android:onClick="ProNow"
            android:padding="@dimen/margin_lg"
            android:src="@drawable/user_icon"
            android:tint="@color/dgry" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdsa"
        android:layout_marginTop="@dimen/margin_md"
        android:onClick="ProNow">

        <TextView
            android:id="@+id/txt1_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font2"
            android:includeFontPadding="false"
            android:onClick="ProNow"
            android:text="@string/home"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_lg" />

        <TextView
            android:id="@+id/txt211"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:onClick="ProNow"
            android:text="View Profile"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_lg" />
    </RelativeLayout>
</RelativeLayout>