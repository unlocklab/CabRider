<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_md"
    android:background="@drawable/round_ract4"
    android:backgroundTint="@color/white"
    >

    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/left_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/m1"
                android:layout_width="@dimen/size2"
                android:src="@drawable/loc_icon2"
                android:layout_centerHorizontal="true"
                android:tint="@color/blue"
                android:layout_height="@dimen/size2"/>

            <ImageView
                android:id="@+id/m3"
                android:layout_width="@dimen/sizesm1"
                android:layout_below="@id/m1"
                android:layout_marginTop="@dimen/margin"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/dgry"
                android:layout_height="@dimen/sizesm1"/>
            <ImageView
                android:id="@+id/m4"
                android:layout_width="@dimen/sizesm1"
                android:layout_below="@id/m3"
                android:layout_marginTop="@dimen/margin"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/dgry"
                android:layout_height="@dimen/sizesm1"/>
            <ImageView
                android:id="@+id/m5"
                android:layout_width="@dimen/sizesm1"
                android:layout_below="@id/m4"
                android:layout_marginTop="@dimen/margin"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/dgry"
                android:layout_height="@dimen/sizesm1"/>
            <ImageView
                android:layout_below="@id/m5"
                android:layout_width="@dimen/size2"
                android:src="@drawable/loc_icon2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin"
                android:tint="@color/red"
                android:layout_height="@dimen/size2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sizesm1"
            android:layout_toRightOf="@id/left_rl"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:text="Location 1"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_md1" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:paddingTop="@dimen/margin1"
                android:layout_marginTop="@dimen/margin_xxlg"
                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:text="Location 1"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_md1" />
        </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/right_rl"
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/font1"
                android:gravity="right"
                android:includeFontPadding="false"
                android:text="20 May 2020"
                android:textColor="@color/dgry"
                android:textSize="@dimen/txt_size_md" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/margin1"
                android:layout_marginTop="@dimen/margin_xxlg"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/accept_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size3"
                    android:paddingLeft="@dimen/margin1"
                    android:paddingRight="@dimen/margin1"
                    android:background="@drawable/round_ract4"
                    android:backgroundTint="@color/app_color">

                    <TextView
                        android:id="@+id/track_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/font2"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/track"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_md" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_toRightOf="@id/accept_bt"
                    android:layout_width="@dimen/size62"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_height="@dimen/size3"
                    android:visibility="gone"
                    android:background="@drawable/round_ract4"
                    android:backgroundTint="@color/dgry"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:fontFamily="@font/font2"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/reject"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_md" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>