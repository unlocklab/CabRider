<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_ract3"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin1"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingBottom="@dimen/margin1"
        >

        <RelativeLayout
            android:id="@+id/imv_rl"
            android:layout_width="@dimen/size62"
            android:layout_height="@dimen/size62"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/lgry">

            <ImageView
                android:layout_width="@dimen/size2"
                android:layout_height="@dimen/size2"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user_icon"
                android:tint="@color/dgry" />

            <ImageView
                android:id="@+id/imv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="@dimen/size5"
            android:layout_height="@dimen/size5"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/app_color"
            android:padding="@dimen/margin"
            android:src="@drawable/right_arrow"
            android:tint="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_toLeftOf="@id/right_icon"
            android:layout_toRightOf="@id/imv_rl"
            android:paddingLeft="@dimen/margin1">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_mid"
                android:includeFontPadding="false"
                android:text="Lisa Ray"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_lg" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:scaleX=".5"
                android:numStars="5"
                android:rating="4"
                android:isIndicator="true"
                android:scaleY=".5"
                android:transformPivotX="0dp"
                android:transformPivotY="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_rl"
            android:layout_marginTop="@dimen/margin_lg"
            android:paddingLeft="@dimen/margin">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:text="Station A"
                android:textColor="@color/dgry1"
                android:textSize="@dimen/txt_size_md1" />
            <TextView
                android:id="@+id/txtyy"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font2"
                android:includeFontPadding="false"
                android:layout_below="@id/txt2"
                android:text="to"
                android:textColor="@color/dgry1"
                android:textSize="@dimen/txt_size_md1" />
            <TextView
                android:id="@+id/txt21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font2"
                android:layout_below="@id/txtyy"
                android:layout_marginTop="@dimen/margin1"
                android:includeFontPadding="false"
                android:text="Station B"
                android:textColor="@color/dgry1"
                android:textSize="@dimen/txt_size_md1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/rrt"
            android:layout_marginTop="@dimen/margin_lg"
            android:paddingLeft="@dimen/margin1"
            android:paddingRight="@dimen/margin"
            android:background="@drawable/round_ract0"
            android:layout_height="@dimen/size6">

            <EditText
                android:id="@+id/et1"
                android:singleLine="true"
                android:background="@null"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_md1"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/sizesm1"
                android:inputType="phone"
                android:layout_centerVertical="true"
                android:hint="@string/otp_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>